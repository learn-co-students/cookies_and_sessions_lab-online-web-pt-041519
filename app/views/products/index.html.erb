<h1>Welcome to our store</h1>

<% if !cart.empty? %>
  <h2>Your cart has:</h2>
  <ul>
    <% cart.each do |i| %>
      <li><%= i %></li>
    <% end %>
  </ul>
<% end %>

<h2>Add a product to your cart below:</h2>
<%= form_tag ({controller: 'products', action: 'add', method: 'post'}) do %>
  <%= label_tag(:product, "Add Product") %>
  <%= text_field_tag(:product) %>
  <%= submit_tag("add to cart") %>
<% end %>
