<%= form_tag("/products/add", method: :post) do %>
    <%= text_field_tag :product, placeholder: "Your item here", id: 'product'  %>
    <%= submit_tag "add to cart" %>
<%end%>

<%= cart.length > 0 ? "Items in cart:" : "Cart is empty" %>
<ul>
    <% cart.each do |item|%>
        <li><%= item %></li>
    <% end %>
</ul>